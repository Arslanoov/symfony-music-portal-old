<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Music Storage | {% block title %}Dashboard{% endblock %}</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- Font Awesome -->
    {% block css %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
    <!-- Google Font: Source Sans Pro -->
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
        </ul>

        <!-- SEARCH FORM -->
        <form class="form-inline ml-3">
            <div class="input-group input-group-sm">
                <input class="form-control form-control-navbar" type="search" placeholder="Search" aria-label="Search">
                <div class="input-group-append">
                    <button class="btn btn-navbar" type="submit">
                        <i class="fas fa-search"></i>
                    </button>
                </div>
            </div>
        </form>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="{{ path('home') }}" class="brand-link">
            <span class="brand-text font-weight-light">Music Storage</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user panel (optional) -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    {% if app.user and app.user.avatar %}
                        <img src="{{ app.user.avatar }}" class="img-circle elevation-2" alt="">
                    {% else %}
                        <img src="/img/avatar/guest.jpg" class="img-circle elevation-3" alt="">
                    {% endif %}
                </div>
                <div class="info">
                    <a href="#" class="d-block">
                        {% if app.user %}
                            {{ app.user.login }}
                        {% else %}
                            Guest
                        {% endif %}
                    </a>
                </div>
            </div>

            <!-- Sidebar Menu -->
            {% set currentPath = path(app.request.attributes.get('_route'),
                app.request.attributes.get('_route_params')) %}

            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- Add icons to the links using the .nav-icon class
                         with font-awesome or any other icon font library -->
                    <li class="nav-item has-treeview">
                        <a href="{{ path('home') }}" class="nav-link {% if currentPath == path('home') %}active{% endif %}">
                            <i class="nav-icon fas fa-home"></i>
                            <p>
                                Home
                            </p>
                        </a>
                    </li>

                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fa fa-user"></i>
                            <p>
                                User
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            {% if app.user %}
                                <li class="nav-item">
                                    <a href="{{ path('profile.self.home') }}" class="nav-link {% if currentPath == path('profile.self.home') %}active{% endif %}">
                                        <i class="fa fa-user-edit nav-icon"></i>
                                        <p>Profile</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="javascript:void(0)" class="nav-link" onclick="document.getElementById('logout-form').submit();">
                                        <i class="fa fa-link nav-icon"></i>
                                        <p>Log out</p>
                                    </a>

                                    <form action="{{ path('auth.logout') }}" method="POST" id="logout-form"></form>
                                </li>
                            {% else %}
                                <li class="nav-item">
                                    <a href="{{ path('auth.login') }}" class="nav-link">
                                        <i class="fa fa-link nav-icon"></i>
                                        <p>Log In</p>
                                    </a>
                                </li>

                                <li class="nav-item">
                                    <a href="{{ path('auth.signup') }}" class="nav-link">
                                        <i class="fa fa-plus-circle nav-icon"></i>
                                        <p>Sign Up</p>
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </li>

                    <li class="nav-item has-treeview">
                        <a href="#" class="nav-link">
                            <i class="nav-icon fas fa-music"></i>
                            <p>
                                Music
                                <i class="right fas fa-angle-left"></i>
                            </p>
                        </a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="fa fa-clock nav-icon"></i>
                                    <p>Latest</p>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link">
                                    <i class="fa fa-star nav-icon"></i>
                                    <p>Best</p>
                                </a>
                            </li>
                            {% if app.user %}
                                <li class="nav-item">
                                    <a href="{{ path('music.my') }}" class="nav-link">
                                        <i class="fa fa-certificate nav-icon"></i>
                                        <p>My</p>
                                    </a>
                                </li>
                                <li class="nav-item">
                                    <a href="#" class="nav-link">
                                        <i class="fa fa-cloud nav-icon"></i>
                                        <p>Library</p>
                                    </a>
                                </li>
                            {% endif %}
                        </ul>
                    </li>

                    {% if app.user %}
                        {% if is_granted('ROLE_MODERATOR') or is_granted('ROLE_CONTENT_MANAGER') %}
                            <li class="nav-item has-treeview">
                                <a href="{{ path('manage') }}" class="nav-link">
                                    <i class="nav-icon fas fa-edit"></i>
                                    <p>
                                        Manage
                                        <i class="right fas fa-angle-left"></i>
                                    </p>
                                </a>
                                <ul class="nav nav-treeview">
                                    <li class="nav-item">
                                        <a href="{{ path('manage') }}" class="nav-link {% if currentPath == path('manage') %}active{% endif %}">
                                            <i class="fa fa-home nav-icon"></i>
                                            <p>Home</p>
                                        </a>
                                    </li>
                                    {% if is_granted('ROLE_MANAGE_GENRES') %}
                                        <li class="nav-item">
                                            <a href="{{ path('manage.genres') }}" class="nav-link {% if currentPath == path('manage.genres') %}active{% endif %}">
                                                <i class="fa fa-guitar nav-icon"></i>
                                                <p>Genres</p>
                                            </a>
                                        </li>
                                    {% endif %}
                                </ul>
                            </li>
                        {% endif %}
                    {% endif %}
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    {% block breadcrumbs %}{% endblock %}
                </div><!-- /.row -->
            </div><!-- /.container-fluid -->
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <!-- Small boxes (Stat box) -->
                {% block body %}{% endblock %}
                <!-- /.row (main row) -->
            </div><!-- /.container-fluid -->
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <footer class="main-footer">
        <strong>Music Storage</strong>
        <strong>Copyright &copy; 2014-2019 <a href="http://adminlte.io">AdminLTE.io</a>.</strong>
        All rights reserved.
        <div class="float-right d-none d-sm-inline-block">
            <b>Version</b> 3.0.5
        </div>
    </footer>

    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
        <!-- Control sidebar content goes here -->
    </aside>
    <!-- /.control-sidebar -->
</div>
<!-- ./wrapper -->
{% block js %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}

</body>
</html>
