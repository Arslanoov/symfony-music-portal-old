{% extends 'layouts/main.html.twig' %}

{% block breadcrumbs %}
    <div class="col-sm-6">
        <h1 class="m-0 text-dark">Dashboard</h1>
    </div>
    <div class="col-sm-6">
        <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item"><a href="{{ path('profile.show', {'login': app.user.login}) }}">Profile</a></li>
            <li class="breadcrumb-item"><a href="#">Album "{{ album.title }}"</a></li>
            <li class="breadcrumb-item active"><a href="#">Upload for album "{{ album.title }}"</a></li>
        </ol>
    </div>
{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-body">
            {% include 'layouts/_flashes.html.twig' %}

            {{ form_start(form) }}
            {{ form_widget(form) }}
            <button type="submit" class="btn btn-primary">Upload</button>
            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}